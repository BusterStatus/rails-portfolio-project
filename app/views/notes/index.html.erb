<ul class="collection">
        <li class="collection-item">Notes for <%= link_to @client.name, @client %></li>
</ul>
<ol class="collection">
<% @client.notes.each do |note| %>
        <li class="collection-item"><%= link_to "#{note.date} note", client_note_path(@client, note) %> by <%= link_to note.user.name, user_path(note.user) %></li>
<% end %>
</ol>