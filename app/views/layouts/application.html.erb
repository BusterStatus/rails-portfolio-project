<!DOCTYPE html>
<html>
  <head>
    <title>RailsPortfolioProject</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <%= link_to "Home", "/" %> | <%= link_to "My Page", user_path(current_user) %>
    <% if session[:user_id] %>
      <%=     link_to("| Log Out", logout_url, method: :post) %>
    <% else %>
      <%=     link_to "| Log In", :controller => 'sessions', :action => 'new' %>
    <% end %>
    <%= yield %>
  </body>
</html>
